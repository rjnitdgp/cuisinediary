<% include ../partials/header %>
    
    
    
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <br><a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new CampGround</a></br>
        </div>
    </header>
    
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" height="300px" width="500px">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-sm btn-primary">More Info</a>
                    </p>
                    
                </div>
            </div>

        <% }) %>

        <a href="/">Goto HomePage</a>
    </div>
</div>

<% include ../partials/footer %>